{
  "name": "niconama-game-sorting",
  "private": true,
  "version": "0.1.0",
  "description": "カプセル魚くん仕分けゲームの開発プロジェクト",
  "scripts": {
    "build": "rimraf ./script && tsc && akashic scan asset script",
    "build:watch": "chokidar \"src/**/*.ts\" -c \"npm run build\"",
    "update": "akashic scan asset && akashic-cli-scan globalScripts",
    "update:watch": "chokidar audio image -c \"npm run update\"",
    "lint": "eslint src -c eslint.config.mjs --fix",
    "start": "akashic sandbox .",
    "export-zip": "rimraf game.zip && akashic export zip -o game.zip -s",
    "export-html": "rimraf game && akashic export html -o game",
    "develop": "run-p -l start build:watch update:watch"
  },
  "author": "Sokuhatiku",
  "license": "MIT",
  "devDependencies": {
    "@akashic-extension/akashic-timeline": "^3.2.1",
    "@akashic/akashic-cli": "^2.17.23",
    "@akashic/akashic-engine": "^3.6.0",
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "@babel/preset-typescript": "^7.25.7",
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.13",
    "babel-jest": "^29.7.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.12.0",
    "globals": "^15.11.0",
    "jest": "^29.1.1",
    "npm": "^10.9.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.0.3",
    "typescript": ">=4.7.4 <5.6.0",
    "typescript-eslint": "^8.8.1"
  }
}
